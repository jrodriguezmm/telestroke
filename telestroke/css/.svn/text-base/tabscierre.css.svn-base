ul.tabs {
	margin: 0;
	padding: 0;
	float: left;
	list-style: none;
	height: 32px; /*--Set height of tabs--*/
	border-bottom: 1px solid #999;
	border-left: 1px solid #999;
	width: 100%;
    position:relative;
    z-index: 1;
}
.tabs li{
	float: left;
	margin: 0;
	padding: 0;
        cursor: pointer;
	height: 31px; /*--Subtract 1px from the height of the unordered list--*/
	line-height: 31px; /*--Vertically aligns the text within the tab--*/
	border: 1px solid #999;
	border-left: none;
	margin-bottom: -1px; /*--Pull the list item down 1px--*/
	overflow: hidden;
	position: relative;
	background: #e0e0e0;
}
.tabWrapper
{
    border-bottom: solid 1px #676767;
}

.tabla_container {
    border: 2px solid #999;
    overflow: hidden;
    clear: both;
    float: left; width: 100%;
    background: #fff;
    height:300px;width:750px;overflow:scroll;
}

.tabla_containerGrande {
    border: 2px solid #999;
    overflow: hidden;
    clear: both;
    float: left; width: 100%;
    background: #fff;
    height:550px;width:750px;overflow:scroll;
}

ul.tabs li a {
	text-decoration: none;
	color: #000;
	display: block;
	font-size: 0.8em;
	padding: 0 10px;
	border: 1px solid #fff; /*--Gives the bevel look with a 1px white border inside the list item--*/
	outline: none;
}
ul.tabs li a:hover {
	background: #ccc;
}
html ul.tabs li.active, html ul.tabs li.active a:hover  { /*--Makes sure that the active tab does not listen to the hover properties--*/
	background: #fff;
	border-bottom: 1px solid #fff; /*--Makes the active tab look like it's connected with its content--*/
}
.tab_container {
	border: 1px solid #999;
	border-top: none;
	overflow: hidden;
	clear: both;
	float: left; width: 100%;
	background: #fff;
}
.tab_container2 {
	border: 1px solid #999;
	border-top: solid;
	overflow: hidden;
	clear: both;
	float: left; width: 100%;
	background: #fff;
}
.tab_content {
	padding: 20px;
	font-size: 1.2em;
}
